    <style>
        body { background: #000; color: #0f0; font-family: 'Courier New', monospace; text-align: center; padding: 20px; }
        .box { border: 2px solid #0f0; padding: 20px; margin: 20px auto; max-width: 400px; box-shadow: 0 0 15px #0f0; }
        .btn { background: #0f0; color: #000; padding: 20px; border: none; font-weight: bold; width: 100%; font-size: 1.2em; cursor: pointer; }
        #data { font-size: 0.8em; color: #888; margin-top: 10px; }
        #stamp { font-size: 1.5em; color: #f0f; margin-top: 15px; font-weight: bold; word-break: break-all; }
    </style>
