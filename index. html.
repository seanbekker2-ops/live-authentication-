        <div id="data">WAITING FOR SENSORS...</div>
        <div id="stamp">----</div>
    </div>

    <script>
        async function start() {
            const data Div = document.getElementById('data');
            const stampDiv = document.getElementById('stamp');
            
            if (typeof DeviceOrientationEvent.requestPermission === 'function') {
                try {
                    const res = await DeviceOrientationEvent.requestPermission();
                    if (res !== 'granted') {
                        dataDiv.innerText = "PERMISSION DENIED";
                        return;
                    }
                } catch (e) {
                    dataDiv.innerText = "ERROR: USE HTTPS";
                }
            }

            window.addEventListener('deviceorientation', (e) => {
                const entropy = (Math.abs(e.alpha) + Math.abs(e.beta) + Math.abs(e.gamma)).toFixed(6);
                dataDiv.innerText = "PHYSICS ENTROPY: " + entropy;
                stampDiv.innerText = "ID: " + btoa(entropy).substring(0, 12);
            });
            
            dataDiv.innerText = "SENSOR STREAM ACTIVE";
        }
    </script>
