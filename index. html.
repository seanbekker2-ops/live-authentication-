        <button class="btn" onclick="start()">ACTIVATE ANCHOR</button>
        <div id="data">SCANNING ROOM PHYSICS...</div>
        <div id="stamp">----</div>
    </div>

    <script>
        async function start() {
            // Request permission for mobile motion sensors
            if (typeof DeviceOrientationEvent.requestPermission === 'function') {
                const res = await DeviceOrientationEvent.requestPermission();
                if (res !== 'granted') return alert("Permission Required to Anchor Reality");
            }
            // Create the unique ID based on device tilt
            window.addEventListener('deviceorientation', (e) => {
                const entropy = (e.alpha + e.beta + e.gamma).toFixed(6);
                document.getElementById('data').innerText = "PHYSICS NOISE: " + entropy;
                const code = btoa(entropy + Date.now()).substring(0, 16);
                document.getElementById('stamp').innerText = "SECURE-ID: " + code;
            });
        }
    </script>
